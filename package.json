{
  "name": "shell-filter",
  "displayName": "Shell Filter",
  "description": "Apply selected text as STDIN to a shell command",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ddoxey/vscode-shell-filter.git"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shellfilter.runCustomShellCommand",
        "title": "Run Shell Filter"
      }
    ],
    "keybindings": [
      {
        "command": "shellfilter.runCustomShellCommand",
        "key": "ctrl+alt+;",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --platform=node --target=node12 --external:vscode",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --platform=node --target=node12 --external:vscode --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "vsce": "^1.97.0"
  }
}
